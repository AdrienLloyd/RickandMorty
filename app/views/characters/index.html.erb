<h1>Characters</h1>

<nav class="navbar navbar-expand-lg bg-dark navbar-dark">

  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Home", home_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Characters", characters_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Episodes", episodes_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "About", about_path %></a>
    </li>
  </ul>

  <%= form_with(url: search_results_characters_path, method: "get", class:"form-inline", local: true) do %>
    <%= text_field_tag(:query, "", class:"form-control mr-sm-2",placeholder:"Search Characters") %>
    <%= submit_tag("Search", class:"btn btn-success") %>
  <% end %>
</nav>

<div class="container" style="margin:auto;">
  <% @characters.each do |character|%>
  <div class="card bg-dark text-white" style="margin-bottom:10px;margin-left:10px;width:500px;float:left;">
    <div class="card-body">
      <h4 class="card-title"><%=link_to character.name, character%></h4>
      <img class="card-img-top" src="<%= character.image %>" alt="Image is missing">
      <p class="card-text">status: <%= character.status %></p>
      <p class="card-text">species: <%= character.species %></p>
      <p class="card-text">origin: <%= character.origin %></p>
    </div>
  </div>
  <% end %>

<%==pagy_nav(@pagy)%>
</div>