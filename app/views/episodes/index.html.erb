<h1>Episodes</h1>

<nav class="navbar navbar-expand-lg bg-dark navbar-dark">

  <ul class="navbar-nav">
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Home", home_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Characters", characters_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "Episodes", episodes_path %></a>
    </li>
    <li class="nav-item">
      <a class="nav-link" href="#"><%= link_to "About", about_path %></a>
    </li>
  </ul>

  <%= form_with(url: search_results_characters_path, method: "get", class:"form-inline", local: true) do %>
    <%= text_field_tag(:query, "", class:"form-control mr-sm-2",placeholder:"Search Characters") %>
    <%= submit_tag("Search", class:"btn btn-success") %>
  <% end %>
</nav>

<% @episodes.each do |episode| %>
  <h2><%= link_to episode.name, episode %></h2>
  <h3>Air Date: <%= episode.air_date %></h3>
  <h3>Episode: <%= episode.episode_name %></h3>
<% end %>

